# Auto detect text files and perform LF normalization
* text=auto

# Windows-specific files should always use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Unix-specific files should always use LF
*.sh text eol=lf

# Source code files use auto
*.js text eol=crlf
*.jsx text eol=crlf
*.ts text eol=crlf
*.tsx text eol=crlf
*.css text eol=crlf
*.html text eol=crlf
*.json text eol=crlf
*.md text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
